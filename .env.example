# Environment configuration example for the agent

# Flask configuration
FLASK_ENV=development  # Options: development, production
FLASK_DEBUG=1          # Options: 0 (off), 1 (on)

# Agent configuration
ASSISTANT_ID=your_default_assistant_id_here

# Database configuration (if applicable)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# API keys and secrets
API_KEY=your_api_key_here
SECRET_KEY=your_secret_key_here

# GitHub Actions Token (for automated workflows)
AGENT_ACTIONS=your_github_pat_token_here

# Notion Integration
# Token for Notion API authentication (required for Notion sync features)
NOTION_TOKEN=your_notion_integration_token_here

# Notion Database IDs (required for syncing with Notion)
NOTION_DISCUSSIONS_ARC_DB_ID=your_discussions_database_id_here
NOTION_ISSUES_BACKLOG_DB_ID=your_issues_backlog_database_id_here
NOTION_KNOWLEDGE_FILE_DB_ID=your_knowledge_database_id_here
NOTION_PAGE_ID=your_notion_page_id_here
NOTION_PR_BACKLOG_DB_ID=your_pr_backlog_database_id_here
NOTION_PROJECT_BOARD_BACKLOG_DB_ID=your_project_board_database_id_here
NOTION_TASK_BACKLOG_DB_ID=your_task_backlog_database_id_here

# Logging configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# CORS configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://yourdomain.com

# External service URLs
EXTERNAL_SERVICE_URL=https://api.external-service.com

# Other configurations
# Add any other environment variables your application might need
